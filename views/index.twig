{% extends 'layout.twig' %}

{% block body %}

    <div class="row">
        <div class="container-fluid" style="margin-top: 3%; margin-bottom: 1% ">
            <center>
                <h2><strong>{% if user %}Hey {{ user.first_name }}, {% endif %}YOUR</strong><br> new Home <br> is
                    waiting to be found by using</h2>
            </center>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-5"></div>

        <div class="col-lg-2">
            <img src="/fa17g16/public/images/homepage_logo_white.png" width="100%" height="100%">
        </div>

        <div class="col-lg-5"></div>
    </div>
    <div class="searcharea">
        <form action="/fa17g16/search" method="post" style="margin-top: 2%">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="col-lg-12">
                        <center>
                            <div class="form-group">
                                <label for="searchplace">Where do you search?</label><br>
                                <input type="text" class="adress-complete-typeahead form-control" id="searchplace"
                                       placeholder="Enter Zipcode" style="width:200px;" name="searchplace" required>
                            </div>
                        </center>
                    </div>
                    <div class="col-lg-12">
                        <center class="row">
                            <div class="col">
                                <label for="searchplace">Price Range:</label><br>
                                <div class="form-group">
                                    <div class="input-group mb-1">
                                        <span class="input-group-addon" style="width:50px; margin-left: 1%">min</span>
                                        <input type="text" style="width:100px;" name="minCost" id="minCost"
                                               class="form-control">
                                    </div>
                                    <div class="input-group">
                                        <span class="input-group-addon" style="width:50px; margin-left: 1%">max</span>
                                        <input type="text" style="width:100px;" name="maxCost" id="maxCost"
                                               class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <label for="searchplace">Living Space Range:</label><br>
                                <div class="form-group">
                                    <div class="input-group mb-1">
                                        <span class="input-group-addon" style="width:50px; margin-left: 1%">min</span>
                                        <input type="text" style="width:100px;" class="form-control" id="minSpace"
                                               name="minSpace">
                                    </div>
                                    <div class="input-group">
                                        <span class="input-group-addon" style="width:50px; margin-left: 1%">max</span>
                                        <input type="text" style="width:100px;" class="form-control" id="maxSpace"
                                               name="maxSpace">
                                    </div>
                                </div>
                            </div>
                        </center>
                    </div>
                </div>
            </div>


            <div class="row" style="margin-top: 1%">
                <div class="container-fluid">
                    <center>
                        <p id="zipcodeerror" style="color: red"></p>
                        <p id="costerror" style="color: red"></p>
                        <p id="spaceerror" style="color: red"></p>
                        <button type="submit" class="btn btn-secondary" onClick="return checkIfEmpty();">
                            <i class="fa fa-search"></i> Find
                        </button>
                        <button style="margin-left:2%" type="reset" class="btn btn-secondary" onClick="resetErrors();">
                            <i class="fa fa-times"></i> Reset
                        </button>
                    </center>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

<label for="searchplace">Price Range:</label>
<div class="input-group blank col-xs-12">
    <span class="input-group-addon">bis</span>
    <input autocomplete="off" class="ng-pristine ng-valid ng-not-empty ng-valid-pattern ng-touched"
           data-ng-model="data.price_to" id="price_to" min="0" pattern="[0-9]*" type="text">
</div>